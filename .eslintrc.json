{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "no-console": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": "off",
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "no-param-reassign": "off",
    "no-shadow": "warn",
    "no-plusplus": "off",
    "radix": ["error", "as-needed"],
    "max-len": "warn",
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off"
  }
}
