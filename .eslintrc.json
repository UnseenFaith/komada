{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": { "sourceType": "module" },
  "rules": {
    "no-console": "off",
    "indent": ["error", 2, { "SwitchCase": 1 } ],
    "linebreak-style": [ "error", "windows" ],
    "quotes": [ "warn", "double" ],
    "semi": [ "warn", "always" ]
  }
}
